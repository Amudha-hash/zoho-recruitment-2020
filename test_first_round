// ConsoleApplication1.cpp : This file contains the 'main' function. Program execution begins and ends there.
//
#include<stdio.h>
#include<string.h>
#include<conio.h>

	int main()
	{
		char str[] = "welcome";
		int len = strlen(str);

		int cen = len / 2;
		int k = cen;
		
		for (int i = len; i > 0 && i <= len; i--) {
			k = cen - 1;
			for (int j = 1; j <= len; j++) {
				printf(" ");
			}
			for (int j = 1; j <= len; j++) {
				if (i > j) {
					printf(" ");
				}
				else {
					k++;
					if (k >= len) {
						k = 0;
					}
					//printf("%d---", k);
					printf("%c", str[k]);
				}

			}
			if (k >= len) {
				k = -1;
			}
			k++;
			printf("\n");
		}
}

	
